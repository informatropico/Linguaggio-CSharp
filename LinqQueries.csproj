  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Update="fuel.csv" CopyToOutputDirectory="PreserveNewest" />
    <None Update="manufacturers.csv" CopyToOutputDirectory="PreserveNewest" />
